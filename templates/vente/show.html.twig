{% extends 'base.html.twig' %}

{% block title %}Vente{% endblock %}
{% block breadcrumb%} Consulter une vente {% endblock %}
{% block bouton%}
    <a class="btn btn-primary text-white" href="{{ path('app_vente_index') }}">Retour</a>
{% endblock%}
{% block body %}
<div class="card">
    <div class="card-body">
        <table class="table table-hover" >
            <tbody>
            <tr>
                <th>
                    Client
                </th>
                <td> {{ vente.client.nomsClient}}</td>
            </tr>

            <tr>
                <th>Produit</th>
                <td>
                    {% for produitVendu in vente.venteProduits %}

                        <div class="mb-3">
                            {{ produitVendu.produit.nomProduit }} - <b> Quantit√© :</b> {{ produitVendu.quantite }}
                        </div>
                    {% endfor %}
                </td>
            </tr>

            <tr>
                <th>Montant Total</th>
                <td>{{ vente.montantTotal }}</td>
            </tr>
            <tr>
                <th>Date de la Vente</th>
                <td>{{ vente.dateVente ? vente.dateVente|date('Y-m-d') : '' }}</td>
            </tr>
            </tbody>
        </table>


    </div>
</div>





{% endblock %}
