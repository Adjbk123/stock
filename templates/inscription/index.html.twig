{% extends 'base.html.twig' %}

{% block title %}Ajout d'un compte utilisateur {% endblock %}

{% block breadcrumb %}Utilisateurs {% endblock %}

{% block bouton %}
    <a class="btn btn-primary text-white" href="{{ path('app_admin') }}">Retour</a>
{% endblock %}

{% block body %}

            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.nom) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.prenom) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.adresse) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.username) }}
                </div>

                <div class="col-md-12">
                    {{ form_row(form.role) }}
                </div>
                <div class="col-md-12">
                    {{ form_row(form.password.first) }}
                </div>
                <div class="col-md-12">
                    {{ form_row(form.password.second) }}
                </div>
            </div>
            <div class="mt-3">
                {{ form_row(form.submit) }}
            </div>
            {{ form_end(form) }}

{% endblock %}
